<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="?attr/actionBarSize"
	android:orientation="vertical">


	<TextView
		android:id="@+id/dept"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginStart="16dp"
		android:layout_marginLeft="16dp"
		android:text="서울"
		android:textColor="#000"
		android:textSize="20sp"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

	<TextView
		android:id="@+id/arrow"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="->"
		android:textColor="#000"
		android:textSize="20sp"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintLeft_toRightOf="@id/dept"
		app:layout_constraintRight_toLeftOf="@id/dest"
		app:layout_constraintTop_toTopOf="parent" />

	<TextView
		android:id="@+id/dest"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="광주"
		android:textColor="#000"
		android:textSize="20sp"
		app:layout_constraintBottom_toBottomOf="@id/dept"
		app:layout_constraintLeft_toRightOf="@id/arrow"
		app:layout_constraintTop_toTopOf="@id/dept" />

	<TextView
		android:id="@+id/day"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginStart="16dp"
		android:layout_marginLeft="16dp"
		android:text="2019/09/17"
		app:layout_constraintBottom_toTopOf="@+id/peopleNum"
		app:layout_constraintLeft_toRightOf="@id/dest"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintVertical_chainStyle="packed" />

	<TextView
		android:id="@+id/time"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginLeft="8dp"
		android:text="09:10"
		app:layout_constraintLeft_toRightOf="@id/day"
		app:layout_constraintTop_toTopOf="@id/day" />

	<TextView
		android:id="@+id/peopleNum"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="1명"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintLeft_toLeftOf="@id/day"
		app:layout_constraintTop_toBottomOf="@id/day" />

	<TextView
		android:id="@+id/seat"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginLeft="8dp"
		android:text="좌석번호 : "
		app:layout_constraintLeft_toRightOf="@id/peopleNum"
		app:layout_constraintTop_toTopOf="@id/peopleNum" />

	<Button
		android:id="@+id/cancelBtn"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="취소"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintRight_toRightOf="parent"
		app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>